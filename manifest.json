{
    "manifest_version": 2,
    "name": "TBL表单自动完成",
    "version": "1.0.1",
    "description": "自动补充TBL网站各种表单数据，方便测试",
    "icons": {
        "38": "images/icon38.png"
    },
    "permissions": [
        "*://qa-www.twobrightlights.com/*", 
        "*://local.tbl.com/*",
        "https://test.authorize.net/*",
        "storage",
        "tabs",
        "history",
        "contextMenus"
     ],
    "browser_action": {
        "default_icon": {
            "38": "images/icon38.png"
        },
        "default_title": "TBL表单自动完成",
        "default_popup": "popup.html"
    },
    "background":{
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["*://qa-www.twobrightlights.com/*","*://local.tbl.com/*"],
            "run_at": "document_end",
            "js": ["js/common_end.js"]
        },{
            "matches": ["https://test.authorize.net/*"],
            "run_at": "document_end",
            "js": ["js/authorize_net.js"],
            "all_frames": true
        }
    ],
    "options_page": "options.html"
}